<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.qsxh.dao.FundDao">

    <!--    账户资金列表-->
    <select id="findAllAccount" parameterType="com.qsxh.entity.FundEntity" resultType="com.qsxh.entity.FundEntity">
        select u1.*,u2.pname from tblaccount u1,tblparam u2 where u1.atype=u2.paramid
        <if test=" !(''.equals(userid)) and null!= userid ">
            and u1.userid like '%${userid}%'
        </if>
        <if test=" !(''.equals(begindate)) and null!= begindate">
            and u1.adate between #{begindate}
        </if>
        <if test=" !(''.equals(enddate)) and  null!= enddate">
            and #{enddate}
        </if>
        limit #{page},#{limit}
    </select>

    <!--    账户资金列表数-->
    <select id="getFundNum" parameterType="com.qsxh.entity.FundEntity" resultType="java.lang.Integer">
        select count(*) from tblaccount u1 where 1=1
        <if test=" !(''.equals(userid)) and null!= userid ">
            and u1.userid like '%${userid}%'
        </if>
        <if test=" !(''.equals(begindate)) and null!= begindate">
            and u1.adate between #{begindate}
        </if>
        <if test=" !(''.equals(enddate)) and  null!= enddate">
            and #{enddate}
        </if>
    </select>


</mapper>