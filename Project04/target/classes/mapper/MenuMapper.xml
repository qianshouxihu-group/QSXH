<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qsxh.dao.MenuMapper">
	<resultMap id="BaseResultMap" type="com.qsxh.entity.Menu1">
		<id column="menuid" jdbcType="VARCHAR" property="menuid" />
		<result column="fid" jdbcType="VARCHAR" property="fid" />
		<result column="mname" jdbcType="VARCHAR" property="mname" />
	</resultMap>
	<sql id="Base_Column_List">
		menuid, fid, mname
	</sql>
	<select id="selectByPrimaryKey"
			parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from tblmenu
		where id = #{id,jdbcType=INTEGER}
	</select>


	<!-- 查询所有菜单 -->
	<select id="queryAllMenu" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from tblmenu
	</select>

	<!-- 根据角色ID查询菜单 -->
	<select id="queryMenuByRoleId" resultMap="BaseResultMap">
		select t1.* from
		tblmenu t1 inner join tblrm t2 on(t1.menuid=t2.menuid) where
		t2.roleid=#{roleid}
	</select>


	<!-- 查询某角色ID下左侧下拉菜单list -->
	<select id="selectRoleMenuList" parameterType="java.lang.String" resultType="com.qsxh.entity.Menu">
		select  u1.*,u3.mname as fname  from tblmenu u1,tblrm u2,tblmenu u3 where u1.menuid=u2.menuid
		and u2.roleid=#{roleid}  and u1.fid=u3.menuid
	</select>



</mapper>